<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    {{!-- Stylesheet --}}
    <link rel='stylesheet' href='/stylesheets/style.css' />
    
    {{!-- Bootstrap Stylesheet --}}
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    {{!-- Scripts --}}
    <script src="/javascripts/bootstrap.min.js" defer></script>

    <script src="/javascripts/script.js" defer></script>
  </head>
  <body>
    <!-- sample Navbar: https://www.w3schools.com/bootstrap4/bootstrap_navbar.asp -->
    <nav class="navbar navbar-expand-md navbar-dark p-2" id="navbar">
      <!-- Brand -->
      <a class="navbar-brand" href="/">Student Haven Barrie</a>

      <!-- Toggler/collapsible Button -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar links -->
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            {{!-- <li class="nav-item">
                <a class="nav-link" href="/housing/listing">Housing</a>
            </li> --}}
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
          

          <ul class="navbar-nav ms-auto">
            {{#ifEquals user.userType "Landlord"}}
              <ul class="navbar-nav bg-danger rounded-3">
                <li class="nav-item">
                  <a class="nav-link" href="/landlord/postings">New Post</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/landlord/postings">Your Listings</a>
                </li>
              </ul>
          {{/ifEquals}}
            {{#if user}}
            <li class="nav-item">
                <a class="nav-link" href="#">{{user.username}}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
            {{else}}
              <li class="nav-item">
                  <a class="nav-link" href="/auth/register">Register</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/auth/login">Login</a>
              </li>
            {{/if}}
          </ul>          
      </div>
    </nav>
    <main class="">
      {{{body}}}
    </main>
    
  </body>
</html>
