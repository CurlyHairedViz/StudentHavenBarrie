<div class="m-auto text-center p-3">
    {{!-- <div class="bg-white opacity-75 w-50 m-auto p-3"> --}}
        <h1 class="text-uppercase fw-bold">{{ title }}</h1>
    {{!-- </div> --}}
</div>

<div class="row g-4 w-75 m-auto justify-content-start">
    {{#each posts}}
    <div class="col-md-4">
        <div class="card h-100" style="width: 18rem;">
            {{!-- <img src="" class="card-img-top" alt="..."> --}}
            <div class="card-body">
                <h5 class="card-title">{{ this.subject }}</h5>
                <p class="card-text">{{ this.description }}</p>
                <p class="card-text">$ {{ this.price }}</p>
                <a href="#" class="btn btn-secondary">More Details</a>
            </div>
        </div>
    </div>
    {{/each}}
    
</div>